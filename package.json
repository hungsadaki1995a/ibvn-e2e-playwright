{
  "name": "ibvn-e2e-playwright",
  "version": "1.0.0",
  "description": "End-to-end tests with Playwright",
  "scripts": {
    "test": "playwright test --project=chromium --headed --ui",
    "test:setup": "playwright test tests/setup/manual-login.spec.ts --project=setup --headed",
    "test:ui": "playwright test --ui",
    "test:ui-session": "playwright test --ui --workers=1 --project=session",
    "test:session": "playwright test --headed --workers=1 --project=session",
    "test:login-first": "playwright test tests/login-session.spec.ts --headed --workers=1",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --project=chromium --debug",
    "test:report": "playwright show-report",
    "test:auto": "playwright test --grep-invert manual"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0"
  }
}
